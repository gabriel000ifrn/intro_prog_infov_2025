	19.	ler (valor_total)
ler (num_pessoas)
valor_por_pessoa = valor_total / num_pessoas
mostrar valor_por_pessoa
	20.	ler (valor_produto)
ler (percentual_desconto)
valor_com_desconto = valor_produto * (1 - percentual_desconto / 100)
mostrar valor_com_desconto
